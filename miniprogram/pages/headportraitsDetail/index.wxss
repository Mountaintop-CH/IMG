/* miniprogram/pages/headportraitsDetail/index.wxss */
.headportraitsDetail {
  width: 100%;
  height: 100%;
  overflow: hidden;
  margin-bottom: 100rpx;
  background-color: #fff;
}

.headportraitsDetail_content {
  width: 100%;
  height: 100%;
}

.head_img_box {
  margin-top: 20rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
}

.scroll-x-view {
  width: 100%;
  height: 340rpx;
  white-space: nowrap;
}

.scroll-x-view .scroll-view-item {
  width: 338rpx;
  height: 338rpx;
  background: #B5B5B5;
  border-radius: 18rpx;
  margin: 0 10rpx;
  display: inline-block;
}

/* 介绍 */
.head_img_introduce_box {
  width: 100%;
  min-height: 200rpx;
  padding: 30rpx 20rpx 10rpx 20rpx;
  box-sizing: border-box;
}

.name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.introduce {
  font-size: 26rpx;
  margin-top: 10rpx;
  line-height: 46rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #666666;
}

.like_box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  align-items: center;
}

.like {
  display: flex;
  align-items: center;
}

.like_text {
  margin-left: 4rpx;
  font-size: 22rpx;
  font-weight: 400;
  color: #666666;
}

/* 作者 */
.author_box {
  width: 100%;
  height: 200rpx;
  padding: 30rpx 20rpx 10rpx 20rpx;
  box-sizing: border-box;
}

.title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
}

.author_information {
  margin-top: 20rpx;
  width: 100%;
  height: 104rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.author_headimg {
  width: 102rpx;
  height: 102rpx;
  border-radius: 50%;
  background-color: #ccc;
  margin-right: 20rpx;
}

.author_content {
  flex: 1;
}

.author_name {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}

.author_products {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #666666;
  margin-top: 26rpx;
}

.focus_author {
  width: 104rpx;
  height: 54rpx;
  border: 1rpx solid #FF9B3A;
  border-radius: 27rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #FF9B3A;
  text-align: center;
  line-height: 54rpx;
}
/* 猜你喜欢 */
.guess_like{
  width: 100%;
  height: 100%;
  padding: 30rpx 20rpx 10rpx 20rpx;
  box-sizing: border-box;
}

/* 热门 */
.headportraits_detail_hot {
  width: 100%;
  min-height: 1000rpx;
}
.headportraits_detail_text {
  height: 60rpx;
}
.headportraits_detail_hot_box {
  width: 100%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  box-sizing: border-box;
  margin-top: -3%;

}

.headportraits_detail_hot_content {
  width: 226rpx;
  height: 270rpx;
  border-radius: 16rpx;
  position: relative;
  margin-top: 40rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #333333;
}

.headportraits_detail_hot_content_img {
  width: 226rpx;
  height: 226rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.headportraits_detail_hot_content_img image {
  width: 100%;
  height: 100%;
}

.headportraits_detail_hot_content_text {
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 2rpx solid reds;
  padding-top: 10rpx;
  flex: 1;
}

.like {
  display: flex;
  align-items: center;
}

.like_text {
  margin-left: 4rpx;
  font-size: 22rpx;
  font-weight: 400;
  color: #666666;
}